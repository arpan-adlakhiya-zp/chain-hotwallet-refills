		{
			"name": "Raise a refill request (AUTH)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const dateNow = Math.floor(Date.now() / 1000);",
							"",
							"// Your payload (as an object)",
							"const payload = {",
							"  refill_request_id: \"TEST_REQ_00007\",",
							"  wallet_address: \"<wallet_address>\",",
							"  asset_symbol: \"<asset_symbol>\",",
							"  chain_name: \"<chain_name>\",",
							"  refill_amount: \"<refill_amount>\",",
							"  refill_sweep_wallet: \"<refill_sweep_wallet>\",",
							"  asset_address: \"<asset_address>\",",
							"  iat: dateNow,",
							"  exp: dateNow + 300",
							"};",
							"",
							"// Your private key (PEM format, as a Postman variable or pasted directly)",
							"const privateKey = pm.collectionVariables.get(\"authPrivateKey\");",
							"",
							"// JWT Header",
							"const header = {",
							"  alg: \"RS256\",",
							"  typ: \"JWT\"",
							"};",
							"",
							"const navigator = {}; //fake a navigator object for the lib",
							"const window = {}; //fake a window object for the lib",
							"eval(pm.collectionVariables.get('jsrsasign-js'));",
							"",
							"const sHeader = JSON.stringify(header);",
							"const sPayload = JSON.stringify(payload);",
							"",
							"const jwt = KJUR.jws.JWS.sign(\"RS256\", sHeader, sPayload, privateKey);",
							"",
							"pm.request.body.update(jwt);",
							"pm.request.headers.upsert({ key: \"Content-Type\", value: \"text/plain\" });"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
        {
					"listen": "test",
					"script": {
						"exec": [
							"const navigator = {}; //fake a navigator object for the lib",
							"const window = {}; //fake a window object for the lib",
							"eval(pm.collectionVariables.get('jsrsasign-js'));",
							"",
							"const jwt = pm.response.text();",
							"const publicKey = pm.collectionVariables.get('verifyPublicKey'); // PEM format",
							"",
							"let isValid = false;",
							"try {",
							"  isValid = KJUR.jws.JWS.verifyJWT(jwt, publicKey, { alg: ['RS256'] });",
							"} catch (e) {",
							"  console.log(e.message);",
							"  pm.test(\"JWT verification error\", function () { pm.expect.fail(e.message); });",
							"}",
							"",
							"pm.test(\"JWT signature is valid (RS256)\", function () {",
							"  pm.expect(isValid).to.be.true;",
							"});",
							"",
							"const payload = KJUR.jws.JWS.parse(jwt).payloadObj;",
							"console.log(payload);",
							"if (payload.exp && payload.iat) {",
							"  pm.test(\"JWT is not expired\", function () {",
							"    pm.expect(payload.exp).to.be.above(Math.floor(Date.now() / 1000));",
							"  });",
							"  pm.test(\"JWT is within max life time\", function () {",
							"    pm.expect(payload.exp - payload.iat).to.be.lessThanOrEqual(300);",
							"  });",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
